<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Team Management - Spirit of Youth Phoenix</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/style.css" />
</head>
<body class="bg-blue-50 text-gray-800 leading-relaxed">
  <%- include('_header') %>

  <main class="container mx-auto mt-8 p-4 md:px-8">
    <div class="main-content-background"></div>

    <section class="bg-white rounded-lg shadow-xl p-6 mb-8 border-t-4 border-blue-600">
      <h2 class="text-3xl font-bold mb-6 text-blue-800">Team Management</h2>

      <% if (message) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
          <%= message %>
        </div>
      <% } %>
      <% if (error) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <%= error %>
        </div>
      <% } %>

      <!-- Add Player Form -->
      <form action="/coach-area/team_management" method="POST" class="grid md:grid-cols-2 gap-4 mb-8">
        <div>
          <label class="block text-sm font-medium mb-1">Player Name</label>
          <input type="text" name="name" required class="w-full border rounded p-2" />
        </div>
        <div>
          <label class="block text-sm font-medium mb-1">Shirt Number</label>
          <input type="number" name="shirt_number" required class="w-full border rounded p-2" />
        </div>
        <div>
          <label class="block text-sm font-medium mb-1">Positions</label>
          <select name="positions" multiple class="w-full border rounded p-2">
            <option value="GK">GK</option>
            <option value="LB">LB</option>
            <option value="CB">CB</option>
            <option value="RB">RB</option>
            <option value="CM">CM</option>
            <option value="LM">LM</option>
            <option value="RM">RM</option>
            <option value="CAM">CAM</option>
            <option value="CDM">CDM</option>
            <option value="ST">ST</option>
            <option value="LW">LW</option>
            <option value="RW">RW</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium mb-1">Assign Parent(s)</label>
          <select name="parent_ids" multiple class="w-full border rounded p-2">
            <% parents.forEach(parent => { %>
              <option value="<%= parent.id %>"><%= parent.username %></option>
            <% }) %>
          </select>
        </div>
        <div class="md:col-span-2">
          <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded">
            Add Player
          </button>
        </div>
      </form>

      <!-- Players Display -->
      <h3 class="text-2xl font-semibold text-blue-700 mb-4">Squad</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% players.forEach(player => { %>
          <div class="bg-gray-100 p-4 rounded shadow text-center">
            <div class="w-20 h-24 mx-auto mb-2 bg-blue-600 text-white rounded-b-lg flex items-center justify-center text-2xl font-bold">
              <%= player.shirt_number %>
            </div>
            <p class="font-medium text-gray-800"><%= player.name %></p>
            <p class="text-sm text-gray-600 mb-1">
              Positions: <%= player.positions.join(', ') %>
            </p>
            <% if (player.parents.length > 0) { %>
              <p class="text-xs text-gray-500">Parents: 
                <%= player.parents.map(p => p.username).join(', ') %>
              </p>
            <% } %>
            <form action="/coach-area/team_management/<%= player.id %>/delete" method="POST" class="mt-3">
              <button type="submit" class="text-red-600 hover:underline text-sm">Remove</button>
            </form>
          </div>
        <% }) %>
      </div>
    </section>
  </main>

  <footer class="bg-gray-900 text-gray-300 p-6 mt-12">
    <div class="container mx-auto text-center text-sm">
      &copy; <%= new Date().getFullYear() %> Spirit of Youth Phoenix. All rights reserved.
    </div>
  </footer>
</body>
</html>
