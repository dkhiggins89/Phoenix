<%- include('../_header') %>

<div class="max-w-5xl mx-auto p-4">
  <h1 class="text-3xl font-bold mb-6">Training Plan</h1>

  <% if (message) { %>
    <div class="bg-green-100 text-green-800 p-3 rounded mb-4">
      <%= message %>
    </div>
  <% } %>
  <% if (error) { %>
    <div class="bg-red-100 text-red-800 p-3 rounded mb-4">
      <%= error %>
    </div>
  <% } %>

  <% if (trainingSessions.length === 0) { %>
    <p class="text-gray-700">No training sessions available yet.</p>
  <% } else { %>
    <% trainingSessions.forEach(session => { %>
      <div class="mb-6 bg-white shadow rounded-xl p-4">
        <h2 class="text-xl font-semibold mb-1">
          <%= session.session_date ? new Date(session.session_date).toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' }) : 'Unknown date' %>
          — <%= session.location %>
        </h2>
        <p class="text-gray-700 mb-3"><%= session.notes %></p>

        <% if (Array.isArray(session.drills) && session.drills.length > 0 && session.drills[0].id !== null) { %>
          <ul class="list-disc pl-6 space-y-2">
            <% session.drills.forEach(drill => { %>
              <li>
                <strong><%= drill.drill_name %></strong> — 
                <%= drill.duration_minutes %> min<br>
                <em class="text-sm text-gray-600"><%= drill.description %></em>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p class="text-sm text-gray-500">No drills added to this session yet.</p>
        <% } %>
      </div>
    <% }); %>
  <% } %>
</div>

<%- include('../partials/footer') %>
